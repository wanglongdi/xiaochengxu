/**index.wxss**/
@import '../../dist/app.wxss';
.app{
    position: absolute;
    top:0;
    right:0;
    bottom:0;
    left:0;

    background:url('http://zinrohk.oss-cn-hangzhou.aliyuncs.com/synutra/images/bg-body.png') no-repeat center;
    background-size:cover;

    padding:180rpx 50rpx;
}

.form-static{
    width:100%;
    padding: 14rpx 24rpx;
    color:#fff;
    background: #E74C3C;

    position: fixed;
    top:0;
    left:0;
}

checkbox .wx-checkbox-input{
    width:30rpx;
    height:30rpx;
    border:1px solid #4394ed;
    margin: 0;
    margin-right: 10rpx;
    position: relative;
    top:-2rpx;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
    font-size: 28rpx;
}
.checkbox-group navigator{
    display: inline-block;
}
.login-wrap{
    padding:76rpx 50rpx 90rpx;
    border-radius: 16rpx;
    box-shadow: 0 0 24rpx rgba(0,0,0,0.2);
}
.login-notice .logo{
    width:132rpx;
    height:98rpx;
    margin-bottom: 30rpx;
}

.login-wrap .form-body .form-control{
    background-color: #f5f5f5;
    border-color:#f5f5f5;
    color:#555;
}
.lo-code .form-control{
    position: relative;
    z-index: 10;
}
.lo-code .btn{
    display: inline-block;
    position: absolute;
    top:0;
    right:0;
    z-index: 12;
}
input div div{color:#b7b7b7;}

.e-dai checkbox .wx-checkbox-input{
    border-color: #00dbf5;
}
.e-dai .logo{
    width:98rpx;
    height:102rpx;
}