page{
  background-color: #b3d4db;
  height: 100%;
}
.container{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.user-avatar{
  width: 200rpx;
  height: 200rpx;
  border-radius: 100%;
  margin-top: 160rpx;
}
.user-name{
  margin-top: 100rpx;
  font-size: 32rpx;
  font-weight: bold;
}
.moto-containter{
  margin-top: 200rpx;
  width: 280rpx;
  height: 80rpx;
  line-height: 80rpx;
  border: #405f80 1px solid;
  border-radius: 5rpx;
  text-align: center;
}
.moto{
  font-size: 22rpx;
  font-weight: bold;
  color: #405f80;
}