.posts-container{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}
.posts-author-date{
  margin: 10rpx 20rpx 20rpx;
}
.posts-author{
  width: 50rpx;
  height: 50rpx;
  border-radius: 100%;
  vertical-align: middle;
}
.posts-date{
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 5px;
  font-size: 26rpx;
  color: #999;
}
.posts-title{
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
}
.posts-image{
  width: 100%;
  height: 200rpx;
}
.posts-content{
  color: #666;
  font-size: 28rpx;
  margin: 0 20rpx 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}
.posts-like{
  font-size: 13px;
  flex-direction: row;
  line-height: 16px;
  margin-left: 10px;
}
.posts-like-image{
  width: 16px;
  height: 16px;
  margin-right: 8px;
  vertical-align: middle;
}
.posts-like-font{
  vertical-align: middle;
  margin-right: 20px;
}